<div class="container">
  <h1> <%= @task.name %> </h1>
  <p> <%= @task.details %> </p>
  <input type="checkbox" disabled <%= "checked" if @task.completed %>>
  <%= link_to "Back to list", tasks_path  %>
  <div class="edit-right">
    <%= link_to "Edit this task", edit_task_path(@task)  %>
  </div>
</div>

